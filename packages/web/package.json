{
  "name": "pob-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "dependencies": {
    "pob-driver": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.19",
    "copyfiles": "^2.4.1",
    "daisyui": "^4.11.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-static-copy": "^1.0.4",
    "wrangler": "^3.53.1"
  },
  "trustedDependencies": ["rclone.js"],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy:pages": "bun -e \"require('fs').rmSync('dist-pages', {recursive:true})\" && copyfiles -u 1 \"dist/**/*\" dist-pages/ && wrangler pages deploy dist-pages",
    "deploy:r2": "aws s3 cp --region auto --endpoint-url $S3_ENDPOINT_URL --recursive --exclude '*' --include '.r2-*' dist/ s3://pob-web/asset/"
  }
}
